<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppHotelPlus.Views.MainPage"
             BackgroundColor="{StaticResource BackgroundLight}"
             Title="AppHotelPlus">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25">
            <Label Text="AppHotelPlus" FontSize="32" FontAttributes="Bold" HorizontalOptions="Center" TextColor="{StaticResource Primary}"/>

            <Frame CornerRadius="16" BackgroundColor="White" Padding="20" HasShadow="True">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Bem-vindo!" FontAttributes="Bold" />
                    <Label Text="Use os botões abaixo para navegar pelo app." />

                    <Button Text="Cadastrar Hóspede" Clicked="BtnCadastrar_Clicked" BackgroundColor="{StaticResource Primary}" TextColor="White" CornerRadius="12"/>
                    <Button Text="Lista de Hóspedes" Clicked="BtnLista_Clicked" BackgroundColor="{StaticResource Secondary}" TextColor="White" CornerRadius="12"/>
                </VerticalStackLayout>
            </Frame>

            <Label Text="Demonstração de POO com List<Hospede> e validação." HorizontalOptions="Center" FontSize="12" TextColor="#666"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
